<%= form_for(message) do |f| %>

    <% if message.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% message.errors.full_messages.each do |message| %>
                <li>
                    <%= message %>
                </li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.label :title, 'titledesu' %><%= f.text_field :title, class:'form-control' %>
    <%= f.label :content, 'メッセージ' %><%= f.text_field :content , class:"form-control" %>
    
    <%= f.submit 'toukou_kyoutsuka' %>
 <% end %>
