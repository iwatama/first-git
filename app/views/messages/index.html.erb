<h1>messageList</h1>
<ul>
    
    <table class = "table table-striped">
        <thead></thead>
        <tr>
            <td>id</td>
            <td>title</td>
            <td>message</td>
        </tr>
        </thead>
        <tbody>
        <% @messages.each do |message| %>
            <tr>
                <td><%= link_to message.id, message %></td>
                <td><%= message.title %></td>
                <td><%= message.content %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</ul>
<div>
<%= paginate @messages %>
</div>

<%= link_to '新規メッセージの作成', new_message_path, class:"btn btn-primary" %>


